<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="proyecto.com.chefappcom.navigation"
    tools:showIn="@layout/app_bar_navigation"
    android:background="@drawable/naranja">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/spg" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtc"
        android:layout_centerHorizontal="true"
        android:id="@+id/spc" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtl"
        android:layout_centerHorizontal="true"
        android:id="@+id/spl" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spv"
        android:layout_below="@+id/tvtv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Frutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtf"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvtc"
        android:layout_alignStart="@+id/tvtc"
        android:layout_toLeftOf="@+id/btnagr"
        android:layout_toStartOf="@+id/btnagr" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/spf"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvtf"
        android:layout_alignStart="@+id/tvtf" />

    <TextView
        android:text="Lacteos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/tvtl"
        android:layout_below="@+id/spc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvtv"
        android:layout_alignEnd="@+id/tvtv" />

    <TextView
        android:text="Vegetales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/tvtv"
        android:layout_below="@+id/spl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nombre"
        android:ems="10"
        android:id="@+id/ingred"
        android:layout_below="@+id/tvting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Ingrese el nombre del ingrediente:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvting"
        android:layout_below="@+id/spv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_alignRight="@+id/tvt2"
        android:layout_alignEnd="@+id/tvt2" />

    <TextView
        android:text="Ingrese la categoria del ingrediente:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvt2"
        android:layout_below="@+id/ingred"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spingred"
        android:layout_below="@+id/tvt2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvt2"
        android:layout_alignEnd="@+id/tvt2" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Granos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/tvtg"
        android:layout_below="@+id/spf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Carnes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/tvtc"
        android:layout_below="@+id/spg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnagr" />

    <Button
        android:text="Agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="botonAgregar"
        android:id="@+id/btnagr"
        android:layout_below="@+id/spingred"
        android:layout_alignRight="@+id/ingred"
        android:layout_alignEnd="@+id/ingred"
        android:layout_marginTop="13dp" />

</RelativeLayout>
